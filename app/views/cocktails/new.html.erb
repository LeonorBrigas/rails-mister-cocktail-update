<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'loading_cocktail.png' %>');">
  <div class="banner-content">
    </div>
  </div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mt-4">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name, label: 'What is the name of your cocktail?', error: 'Name of Cocktail is mandatory' %>
      <%= f.input :photo, label: 'Please upload a nice photo of your cocktail', error: 'Photo of Cocktail is mandatory' %>
      <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
