<div class="banner" style="background-image: url('<%= image_path @cocktail.photo %>'); height: 50vh; background-position: center;">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3 class="recipe mt-3" >Recipe</h3>
    <table class="table table-bordered">
      <tbody>
        <thead>
          <th>Ingredient</th>
          <th>Description</th>
          <th>Action</th>
        </thead>
        <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description %></td>
          <td>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure yo wanna delete this dose?"} do %>
              <i class="fas fa-trash dose-trash"></i>
            <% end %>
          </td>
        </tr>
       <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-sm-12 col-md-6">
        <div style="padding: 30px; margin-top: 10px;">
          <%= render "doses/form" %>
        </div>
    </div>
</div>







